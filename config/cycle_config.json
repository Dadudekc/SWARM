{
    "max_cycles": 100,
    "cycle_interval": 300,
    "max_retries": 3,
    "retry_delay": 60,
    "timeout": 3600,
    "memory_limit": 1000,
    "rate_limit": {
        "requests_per_minute": 20,
        "burst_limit": 5
    },
    "prompt_generation": {
        "max_history_length": 10,
        "min_prompt_length": 50,
        "max_prompt_length": 500,
        "temperature": 0.7,
        "top_p": 0.9,
        "frequency_penalty": 0.5,
        "presence_penalty": 0.5
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "logs/chat_cycle.log",
        "max_size": 10485760,
        "backup_count": 5
    },
    "monitoring": {
        "enabled": true,
        "metrics_interval": 60,
        "alert_thresholds": {
            "error_rate": 0.1,
            "response_time": 30,
            "memory_usage": 0.8
        }
    }
} 