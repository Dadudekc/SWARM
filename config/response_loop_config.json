{
    "paths": {
        "bridge_outbox": "data/bridge_outbox",
        "bridge_archive": "data/bridge_archive",
        "core_outbox": "data/core_outbox",
        "core_archive": "data/core_archive"
    },
    "discord": {
        "token": "YOUR_DISCORD_TOKEN",
        "channel_id": "YOUR_CHANNEL_ID"
    },
    "error_tracking": {
        "max_errors": 1000,
        "error_window": 3600,
        "circuit_breaker": {
            "failure_threshold": 5,
            "reset_timeout": 60,
            "half_open_timeout": 30
        }
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
} 