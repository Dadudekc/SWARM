{
    "paths": {
        "agent_mailbox": "data/agent_mailbox",
        "archive": "data/archive",
        "failed": "data/failed",
        "validated": "data/validated",
        "runtime": "data/runtime",
        "bridge_outbox": "data/bridge_outbox"
    },
    "chatgpt": {
        "api_key": "${CHATGPT_API_KEY}",
        "model": "gpt-4",
        "temperature": 0.7,
        "max_tokens": 2000,
        "max_retries": 3,
        "response_wait": 5,
        "timeout": 30
    },
    "monitoring": {
        "enabled": true,
        "metrics_interval": 60,
        "health_check_interval": 30,
        "max_queue_size": 1000
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "logs/response_loop.log"
    },
    "discord": {
        "enabled": true,
        "notify_errors": true,
        "notify_success": false
    }
} 